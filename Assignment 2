public class App {
    
    public static void main(String[] args) throws Exception {



        //FOR LOOP
        for (int firstnameCount = 5; firstnameCount != 0; firstnameCount--) {
            
            //BREAK
            if (firstnameCount == 4){
                System.out.println("awit sayo pare");
                break;
            }
            System.out.println("Alen");
            
        }
        
        //WHILE LOOP
        int surnameCount = 5;
        while (surnameCount != 0) {
            surnameCount--;
            
        //CONTINUE
            if (surnameCount == 3) {
                System.out.println("Bounce ka na pre");
                continue;
            }
        System.out.println("Osda√±a");
        
        }
        
        //DO WHILE LOOP
        int nicknameCount = 5;
         do {
            System.out.println("Len");
            nicknameCount--;
        } while (nicknameCount != 0);
        

    }
}
